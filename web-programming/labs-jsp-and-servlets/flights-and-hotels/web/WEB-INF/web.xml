<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>webubb.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>webubb.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightsController</servlet-name>
        <servlet-class>webubb.controller.FlightsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HotelsController</servlet-name>
        <servlet-class>webubb.controller.HotelsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservationsController</servlet-name>
        <servlet-class>webubb.controller.ReservationsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsController</servlet-name>
        <url-pattern>/FlightsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelsController</servlet-name>
        <url-pattern>/HotelsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservationsController</servlet-name>
        <url-pattern>/ReservationsController</url-pattern>
    </servlet-mapping>
</web-app>